void RotWord(uint32_t key[][4], int x)
{
    /*
    int temp = 0x00;
    int first = key[x][0];

    for (int i = 0; i <= 4; i++)
    {
        temp = key[x][i];
        key[x][i] = key[x][i + 1];
        key[x][i + 1] = temp;
    }

    key[x][3] = first;*/

    for (int y = 0; y < 4; y++)
    {
        
        uint32_t value = key[x][y];
        uint8_t buffer[4];
        buffer[0] = (value >> 24) & 0xFF;
        buffer[1] = (value >> 16) & 0xFF;
        buffer[2] = (value >> 8) & 0xFF;
        buffer[3] = value & 0xFF;

        cout << buffer[0] << endl;

        uint8_t first = buffer[0];

        for (int i = 0; i < 3; i++)
        {
            buffer[i] = buffer[i + 1];
        }

        buffer[3] = first;

        //key[x][y] = buffer[0] + buffer[1] + buffer[2] + buffer[3];

    }

}
